@model E_Route.Models.ViewModel.LocalPasswordModel
@using (Html.BeginForm("Manage", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="control-group">
        <div class="input-prepend">
            <span class="add-on"><span class="icon-lock"></span></span>
            @Html.PasswordFor(m => m.OldPassword, new { @placeholder = "Mật khẩu cũ" })
            @Html.ValidationMessageFor(m => m.OldPassword)
        </div>
    </div>
    <div class="control-group">
        <div class="input-prepend">
            <span class="add-on"><span class="icon-lock"></span></span>
            @Html.PasswordFor(m => m.NewPassword, new { @placeholder = "Mật khẩu mới" })
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>
    </div>
    <div class="control-group">
        <div class="input-prepend">
            <span class="add-on"><span class="icon-lock"></span></span>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Nhập lại mật khẩu mới" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <button type="submit" class="btn btn-block">
                Đổi mật khẩu</button>
        </div>
        <div class="span6">
            <button type="button" id="btnCancel" class="btn btn-block">
                Thoát</button>
        </div>
    </div>
    
    
    <script type='text/javascript'>
        $(document).ready(function () {
            $('#btnCancel').click(function () {
                window.location = '@Url.Action("Index", "Home")';
            });
        });
    </script>
}
