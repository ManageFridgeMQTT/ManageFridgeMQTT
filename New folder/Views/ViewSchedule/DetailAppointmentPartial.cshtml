                                             date = (DateTime)Session["Detail_Date"],
                                             employeeID = Session["Approve_EmployeeID"].ToString()
       };
       detailGrid.Width = System.Web.UI.WebControls.Unit.Percentage(100);     
       detailGrid.Height = System.Web.UI.WebControls.Unit.Percentage(100);
