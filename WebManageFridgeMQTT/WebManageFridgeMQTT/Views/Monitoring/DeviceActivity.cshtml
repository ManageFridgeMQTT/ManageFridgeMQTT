@model WebManageFridgeMQTT.Utility.ActivityChip
<div class="row">
    <div style="margin-left:20px">
        <p>
            @Html.Label("Đã hoạt động: ", new { @class = "st" })
            @Model.infoDevice.DaHoatDong
        </p>
        <p>
            @Html.Label("Lần thay dầu tiếp theo: ", new { @class = "st" })
            @Model.infoDevice.ThayDauTiep
        </p>
        <p>
            @Html.Label("Lần thay lọc tiếp theo: ", new { @class = "st" })
            @Model.infoDevice.ThayLocTiep
        </p>
    </div>
</div>
<div id="table-hoatdong" class="tab-content wrapper" style="height:200px">
    <table class="tablesorter">
        <thead>
            <tr>
                <th>STT</th>
                <th>Thời Gian</th>
                <th>Mô tả</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ListData != null && Model.ListData.Count >0)
            {
                int i = 1;
                foreach (var item in Model.ListData)
                {                 
                <tr>
                    <td>@i</td>
                    <td>@item.ThoiGian.ToString()</td>
                    <td>@item.StrTrangThai</td>
                </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
<div class="row" style="padding-bottom: 2px">
    <div class="col-xs-offset-3 col-xs-5">
        <button type="button" onclick="showPopup('@Model.infoDevice.ThietBiId')">Xem chi tiết</button>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.tab-content .tablesorter').tablesorter({
            headerTemplate: '{content} {icon}', // Add icon for various themes
            widgets: ['uitheme', 'zebra', 'stickyHeaders', 'stickyFooters'], //, 'filter'
            widgetOptions: {
                stickyHeaders_attachTo: '.wrapper', // or $('.wrapper')
            }
        });
    });
    </script>
