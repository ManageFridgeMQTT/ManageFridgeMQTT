@model WebManageFridgeMQTT.Utility.DeviceActivity
<div class="row">
    <div class="item fl">
        <label class="fl">Chọn Ngày</label>
        @Html.TextBox("strFromDateBaoDuong", Model.FromDate.ToShortDateString(), new { @class = "datepicker" })
        @Html.TextBox("strToDateBaoDuong", Model.ToDate.ToShortDateString(), new { @class = "datepicker" })
    </div>
    <div id="btn-xemBaoDuong" class="item fl">
        <button onclick="RenderBaoDuong('@Model.ThietBiID')">
            <i class="icon-submit" title="Xem báo cáo"></i>Xem
        </button>
    </div>
</div>
<div class="row content-body">
    <div id="table-baoduong" class="tab-content wrapper">
        <table class="tablesorter">
            <thead>
                <tr>
                    <th>Ngày Báo Sửa</th>
                    <th>Ngày Sửa</th>
                    <th>Ngày Hoàn Tất</th>
                    <th>Đơn Vị Sửa</th>
                    <th>Địa Điểm Sửa</th>
                    <th>Mô Tả</th>
                    <th>Chi Phí</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ListDataModify != null && Model.ListDataModify.Count > 0)
                {
                    foreach (var item in Model.ListDataModify)
                    {
                    <tr>
                        <td>@item.NgayBaoSua</td>
                        <td>@item.NgaySua</td>
                        <td>@item.NgayHoanTat</td>
                        <td>@item.DonViSua</td>
                        <td>@item.DiaDiemSua</td>
                        <td>@item.MoTa</td>
                        <td>@item.ChiPhi</td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div class="row" style="padding-bottom: 2px">
    <div class="col-xs-offset-3 col-xs-5">
        <ul class="m-0">
            <li class="ts-pager-baoduong">
                <span>Chọn
                    <select class="pagenum input-mini" title="Select page number"></select>
                </span>
                <span></span>
                <a href="#" title="prev">
                    <img src="@Url.Content("~/Content/NewEtool/img/per.png")" class="prev" /></a>
                <span class="pagedisplay"></span>
                <a href="#" title="next">
                    <img src="@Url.Content("~/Content/NewEtool/img/next.png")" class="next" /></a>
            </li>
        </ul>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker({
            dateFormat: 'dd/mm/yy'
        });
        $('.tab-content .tablesorter').tablesorter({
            headerTemplate: '{content} {icon}', // Add icon for various themes
            widgets: ['uitheme', 'zebra', 'stickyHeaders', 'stickyFooters'], //, 'filter'
            widgetOptions: {
                stickyHeaders_attachTo: '.wrapper', // or $('.wrapper')
            }
        }).tablesorterPager({
            container: $(".ts-pager-baoduong"),
            cssGoto: ".pagenum",
            prev: '.prev',
            next: '.next',
            size: 5,
            removeRows: false,
            output: ' {startRow} to {endRow} of {totalRows}' //'Showing {startRow} to {endRow} of {totalRows} entries' //'{startRow} - {endRow} / {filteredRows} ({totalRows})'  //'/ {totalPages}'
        });
    });
</script>
