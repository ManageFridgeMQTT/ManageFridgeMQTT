@model WebManageFridgeMQTT.Utility.CongTringPopupMV
<div class="row">
    <div class="col-sm-12">
        <h3>Báo cáo tài chính công trình</h3>
        @*<div class="item fl">
           <label class="fl">Chọn Ngày</label>
            @Html.TextBox("strFromDateBaoCao", Model.FromDate.ToShortDateString(), new { @class = "datepicker" })
            @Html.TextBox("strToDateBaoCao", Model.ToDate.ToShortDateString(), new { @class = "datepicker" })
            <button class="btn" onclick="RenderTaiChinh('@Model.CongTrinhId')">
                <i class="icon-submit" title="Xem báo cáo"></i>Xem
            </button>
        </div>*@
        <div class="content-body">
            <div id="table-report" class="tab-content wrapper">
                <div class="row">
                    <table class="table table-striped" style="width:50%; float:left">
                        <thead>
                            <tr class="tablesorter-headerRow">
                                <th colspan="2" style="text-align:center">
                                    Thu
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListTaiChinh != null)
                        {
                            foreach (var item in Model.ListTaiChinh.Where(x=>x.ThuChiType.HasValue && x.ThuChiType.Value).ToList())
                            {
                                <tr>
                                    <td>@item.ThuChiName</td>
                                    <td>@item.ThuChiValue</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                    <table class="table table-striped" style="width:50%; float:right">
                        <thead>
                            <tr class="tablesorter-headerRow">
                                <th colspan="2" style="text-align:center">
                                    Chi
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.ListTaiChinh != null)
                        {
                            foreach (var item in Model.ListTaiChinh.Where(x => x.ThuChiType.HasValue && !x.ThuChiType.Value).ToList())
                            {
                                <tr>
                                    <td>@item.ThuChiName</td>
                                    <td>@item.ThuChiValue</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <table style="width:100%">
                        <thead>
                            <tr>
                                <th colspan="2" style="text-align:center">LỢI NHUẬN HIỆN TẠI: @ViewData["TotalMoney"]</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
